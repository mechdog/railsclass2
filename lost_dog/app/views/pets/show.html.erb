<h1><%= @pet.name %></h1>

<dl>
  <dt>Breed</dt>
  <dd><%= @pet.breed %></dd>
</dl>

<dl>
  <dt>Color</dt>
  <dd class='<%= color_to_class(@pet.color) %>'><%= @pet.color %></dd>
</dl>

<dl>
  <dt>Last Seen</dt>
  <dd><%= time_ago_in_words @pet.last_seen_at %> ago</dd>
</dl>

<div>
  <%= link_to "Edit", edit_pet_path(@pet) %> | <%= link_to "Show All", pets_path %>
</div>
