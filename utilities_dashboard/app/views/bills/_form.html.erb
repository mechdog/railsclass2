<%= form_for bill do |f| %>

  <div class="form-group">
    <%= f.label :utility %>
    <%= f.collection_select :utility_id, @utilities, :id, 
          :name, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, min: 0.01, step: 0.01, class: 'form-control' %>
  </div>

    <%= f.submit nil, class: 'btn btn-primary' %>
  <% end  %>