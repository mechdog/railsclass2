<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Utilities</li>
</ol>

<%= link_to 'New Utility', new_utility_path, class: 'btn btn-success pull-right' %>
<h2>Utilities</h2>

<table class="table">
  <% @utilities.each do |utility| %>
    <tr>
      <td>
        <%= utility.name %>
      </td>
      <td>
        <%= link_to 'Show', utility_path(utility), class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_utility_path(utility), class: 'btn btn-default' %>
        <%= link_to 'Delete', utility_path(utility), method: :delete,
                  confirm: "Are you sure you want to do delete #{utility.name}?", 
                  class: 'btn btn-danger' %>
      </td>
    </tr>
<% end  %>
</table>