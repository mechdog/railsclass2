<h1>Show Home costs</h1>

<div id="bills-chart"></div>

<h2>Add a Bill</h2>

<%= form_for Bill.new,
  remote: true,
  html: {class: 'form-inline', 
  data: {type: :json}, 
  id: 'new_bill_remote'} do |f|
%>
<div class="form-group">
    <%= f.collection_select :utility_id, @utilities, :id, :name, {prompt: 'Select a utility'},
      class:'form-control' %>
</div>

<div class="form-group">
  <%= f.number_field :amount, min: 0.01, step: 0.01, class: 'form-control', placeholder: 'Amount' %>
</div>

<div class="form-group">
  <%= f.date_field :due_on, class: 'form-control', placeholder: 'Due On' %>
</div>

<%= f.submit 'Add Bill', class: 'btn btn-primary' %>

<% end %>

